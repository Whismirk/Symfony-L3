{% extends 'admin/layout.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

<style>
    .btn-edit
    {
        font-size: 12pt;
        position: relative;
        right: 11px;
        transition: all 0.5s;
    }

    .btn-edit:hover
    {
        transform: translateX(10px);
        color: orange;
    }
</style>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Adresse e-mail</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-edit"><a href="{{ path('user_edit', {'id': user.id}) }}">Modifier le compte</a></button>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
