{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des articles{% endblock %}

{% block body %}
    <!-- Index alternatif plus compact pour la page d'administration. -->
    <h1>Gestion des articles</h1>

    <style>
        .btn
        {
            position: relative;
            left: 12px;
            transform: scale(1.1);
        }
        .btn:hover
        {
            transition-duration: 0.5s;
            transform: scale(1.3);
            color: orange;
        }
    </style>

    <style>
        .act:hover
        {
            transform: scale(1.1);
        }
    </style>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Sous-titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.subtitle }}</td>
                <td><b>
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="act">Lire</a> | 
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="act">Modifier</a>
                </b></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun article existant.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}" class="btn"><b>RÃ©diger un article</b></a>
{% endblock %}

