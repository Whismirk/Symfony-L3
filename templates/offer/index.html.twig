{% extends 'espace-client/layout.html.twig' %}

{% block title %}Offres disponibles{% endblock %}

{% block body %}
    <h1>Offres disponibles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Résumé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offer in offers %}
            <tr>
                <td>{{ offer.title }}</td>
                <td>{{ offer.price }}€</td>
                <td>{{ offer.introText }}</td>
                <td>
                    <a href="{{ path('offer_show', {'id': offer.id}) }}"><b>Voir<b></a> |
                    <a href="{{ path('offer_subscribe', {'id': offer.id}) }}"><b>Souscrire</b></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune offre n'est pour le moment disponible.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
